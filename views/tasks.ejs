<body class="body">

  <div class='task-form'>
    <!-- <form method='POST' action='/tasks'> -->
    <form id='submit-task'>
      <input type='text' name='task' placeholder='add task'>
      <button class='add-task'></button>
    </form>
  </div>
  <div class="task-container">
    <div id='my-lists'>
      <article id="movies">
        <header>
          <div><i class="fas fa-video"></i></div>
          <div>Movies</div>
        </header>
        <ul class="list-group" id="demo1">
          <li class="list-group-item"> 1984 </li>
          <li class="list-group-item"> titanic </li>
          <li class="list-group-item"> frozen </li>
          <li class="list-group-item"> lost </li>
          <li class="list-group-item"> friends </li>
          <li class="list-group-item"> harry potter </li>
        </ul>
      </article>
      <article id="books">
        <header>
          <div><i class="fas fa-book-open"></i></div>
          <div>Books</div>
        </header>
        <ul class="list-group" id="demo2">
          <li class="list-group-item">eat, pray love</li>
        </ul>

      </article>
      <article id="restaurants">
        <header>
          <div><i class="fas fa-utensils"></i></div>
          <div>Restaurants</div>
        </header>
        <ul class="list-group" id="demo3">
        </ul>
      </article>
      <article id="products">
        <header>
          <div><i class="fas fa-shopping-cart"></i></div>
          <div>Products</div>
        </header>
        <ul class="list-group" id="demo4">
        </ul>
      </article>
    </div>
  </div>
  
  <!-- App.js -->
